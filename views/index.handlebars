{{!-- Main container to hold everything on the page --}}
<div class="container">
  {{!-- Row with the page header and image  --}}
  <div class="row">
    <div class="col mx-auto p-3">
      <center><img src="https://cdn3.iconfinder.com/data/icons/bakery-and-sweets/512/Milkshake-512.png" width="200"/></center>
      <h1 class="text-center p-2">Ma Milkshake</h1>
    </div>
  </div>

  {{!-- Row that contains cards for the waiting list and the ones that have been gulped already --}}
  <div class="row">
    <div class="col-md-6">
      <div class="card text-white bg-warning mb-3">
        <h4 class="card-header text-center font-weight-bold">On Order</h4>
        <div class="card-body">
          {{!-- Loops through the list of milkshakes and filters the ones that haven't been gulped --}}
          {{#each milkshakes}} 
            {{#unless gulped}} 
              {{> milkshake-block gulped=true }} 
            {{/unless}} 
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card text-white bg-warning mb-3">
        
          <h4 class="card-header text-center font-weight-bold">Completed Orders</h4>
        
        <div class="card-body">
           {{!-- Loops through the list of milkshakes and filters the ones that have been gulped --}}
          {{#each milkshakes}}
            {{#if gulped}}
              {{> milkshake-gulped-block gulped=false }}
            {{/if}}
          {{/each}}
        </div>
      </div>

    </div>
  </div>

  {{!-- Row with the text field to add milkshake to the list --}}
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 mx-auto p-4">
      <div class="form-group text-center">
        <input type="text" class="form-control" id="name">
        <button id="add-milkshake">Submit Order</button>
        <label for="name">Enter a Milkshake you'd like to order and hit 'Submit Order'!</label>
      </div>
    </div>
  </div>

  <div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body text-center">
          Please enter a valid shake name.
          <center>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </center>
        </div>
          
      </div>
    </div>
  </div>
</div>